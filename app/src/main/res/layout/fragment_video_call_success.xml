<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <com.realview.holo.call.widget.BoardImageView
        android:id="@+id/iv_video_call_image_remote_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/background_success" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工单名：创建工单名称"
                android:textColor="#ffffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/task_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工单号：SO20190512"
                android:textColor="#ffffffff"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_success_logo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/ic_call_conn_head" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_video_call_time_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00:00:00"
                        android:textColor="#4BE340"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv_video_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在通话中..."
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <com.realview.holo.call.widget.DiscussionAvatarView
            android:id="@+id/daview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            app:imageRadius="96"
            app:isLastComplete="true"
            app:isShowAnimation="false"
            app:isShowFrame="false"
            app:maxCount="6"
            app:space="0.5" />

    </FrameLayout>


    <com.holo.tvwidget.DrawingOrderRelativeLayout
        android:id="@+id/rl_video_call_success_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:clipToPadding="false"
        android:focusable="false">


        <com.holo.tvwidget.MetroItemFrameLayout
            android:id="@+id/video_call_camera_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:padding="2dp"
            app:radius="4dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_camera_to_extra" />
        </com.holo.tvwidget.MetroItemFrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_call_camera_change"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="切换摄像头"
            android:textColor="#ffffffff"
            android:textSize="20sp" />


        <com.holo.tvwidget.MetroItemFrameLayout
            android:id="@+id/video_call_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:focusable="true"
            app:radius="4dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_video_call_stop" />

        </com.holo.tvwidget.MetroItemFrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="挂断"
            android:textColor="#ffffffff"
            android:textSize="20sp" />


    </com.holo.tvwidget.DrawingOrderRelativeLayout>


</RelativeLayout>