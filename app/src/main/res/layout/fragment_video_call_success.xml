<?xml version="1.0" encoding="utf-8"?>
<com.holo.tvwidget.DrawingOrderRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_video_call_success_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:focusable="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.realview.holo.call.widget.BoardImageView
        android:id="@+id/iv_video_call_image_remote_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff000000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@mipmap/background_success" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="60dp"
        android:orientation="vertical">

        <include layout="@layout/view_video_call_tips" />



        <FrameLayout
            android:id="@+id/content"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_weight="0" />
        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="200dp"
            android:gravity="bottom"
            android:minLines="3"
            android:padding="10dp"
            tools:text="Tom:你好"
            android:textColor="@color/WHITE" />

    </LinearLayout>


    <com.realview.holo.call.widget.DiscussionAvatarView
        android:id="@+id/daview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="60dp"
        app:imageRadius="96"
        app:isLastComplete="true"
        app:isShowAnimation="false"
        app:isShowFrame="false"
        app:maxCount="6"
        app:space="0.5" />

    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/fl_show_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_change_camera"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/video_call_stop"
        android:focusable="true"
        android:padding="2dp"
        app:radius="4dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_open_video_preview" />

    </com.holo.tvwidget.MetroItemFrameLayout>


    <TextView
        android:id="@+id/tv_show_preview_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_show_preview"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/video_call_stop"
        android:text="关闭本地画面"
        android:textColor="#ffffffff"
        android:textSize="20sp" />


    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/video_call_camera_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:focusable="true"
        android:padding="2dp"
        app:radius="4dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_camera_to_extra" />
    </com.holo.tvwidget.MetroItemFrameLayout>


    <TextView
        android:id="@+id/tv_change_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_call_camera_change"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:text="切换摄像头"
        android:textColor="#ffffffff"
        android:textSize="20sp" />


    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/video_call_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_change_camera"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:focusable="true"
        app:radius="4dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_video_call_stop" />

    </com.holo.tvwidget.MetroItemFrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_call_stop"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:text=" 挂 断 "
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.holo.tvwidget.DrawingOrderRelativeLayout>