<?xml version="1.0" encoding="utf-8"?>
<com.holo.tvwidget.DrawingOrderRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_video_call_success_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:focusable="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.realview.holo.call.widget.BoardImageView
        android:id="@+id/iv_video_call_image_remote_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff000000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:src="@mipmap/background_success" />

    <include layout="@layout/view_video_call_tips" />


    <com.realview.holo.call.widget.DiscussionAvatarView
        android:id="@+id/daview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        app:imageRadius="96"
        app:isLastComplete="true"
        app:isShowAnimation="false"
        app:isShowFrame="false"
        app:maxCount="6"
        app:space="0.5" />

    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/fl_show_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="60dp"
        android:focusable="true"
        android:padding="2dp"
        app:radius="4dp">


    </com.holo.tvwidget.MetroItemFrameLayout>


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_margin="60dp" />

    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/video_call_camera_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:focusable="true"
        android:padding="2dp"
        app:radius="4dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_camera_to_extra" />
    </com.holo.tvwidget.MetroItemFrameLayout>


    <TextView
        android:id="@+id/tv_change_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_call_camera_change"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:text="切换摄像头"
        android:textColor="#ffffffff"
        android:textSize="20sp" />


    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/video_call_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_change_camera"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:focusable="true"
        app:radius="4dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_video_call_stop" />

    </com.holo.tvwidget.MetroItemFrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_call_stop"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:text=" 挂 断 "
        android:textColor="#ffffffff"
        android:textSize="20sp" />


</com.holo.tvwidget.DrawingOrderRelativeLayout>