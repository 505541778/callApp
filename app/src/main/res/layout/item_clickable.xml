<?xml version="1.0" encoding="utf-8"?>
<com.holo.tvwidget.DrawingOrderRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dor_extra_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/mif_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:focusable="true"
        app:radius="4dp">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@mipmap/ic_extra_camera_take_photo" />
    </com.holo.tvwidget.MetroItemFrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="拍  照"
        android:textColor="#ffffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#CC0A0A0A"
        android:orientation="horizontal"
        android:visibility="invisible"
        tools:visibility="visible">

    </LinearLayout>


    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/mif_post_photo_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_toLeftOf="@id/mif_post_photo_reject"
        android:focusable="true"
        android:visibility="invisible"
        app:radius="4dp"
        tools:visibility="visible">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </com.holo.tvwidget.MetroItemFrameLayout>

    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/mif_post_photo_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:focusable="true"
        android:visibility="invisible"
        app:radius="4dp"
        tools:visibility="visible">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="不是"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </com.holo.tvwidget.MetroItemFrameLayout>


    <TextView
        android:id="@+id/send_image_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        android:text="是否发送照片"
        android:textColor="@color/orange"
        android:textSize="28sp"
        android:visibility="invisible"
        tools:visibility="visible" />


    <com.holo.tvwidget.MetroItemFrameLayout
        android:id="@+id/mif_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:focusable="true"
        app:radius="4dp">

        <ImageView
            android:id="@+id/switch_camera_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_camera_to_glass" />
    </com.holo.tvwidget.MetroItemFrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mif_switch_camera"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="48dp"
        android:text="切换摄像头"
        android:textColor="#ffffffff"
        android:textSize="22sp" />

</com.holo.tvwidget.DrawingOrderRelativeLayout>