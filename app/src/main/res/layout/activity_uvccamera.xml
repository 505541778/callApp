<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.serenegiant.usb.widget.UVCCameraTextureView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:stateListAnimator="@null" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:src="@mipmap/ic_extra_camera_focus" />


    <FrameLayout
        android:layout_width="700dp"
        android:layout_height="500dp"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/fl_lines"
            android:layout_width="700dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:background="@mipmap/bg_extra_lines" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_extra_camera_type" />


    </FrameLayout>

    <ImageView
        android:id="@+id/iv_usb_camera_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />


    <include layout="@layout/item_clickable" />
</FrameLayout>